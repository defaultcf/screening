<p id="notice"><%= notice %></p>

<p>
  <strong><%= t "activerecord.attributes.screening.manager" %>:</strong>
  <%= link_to @screening.manager.profile.nickname, user_profile_show_path(name: @screening.manager.profile.username) %>
</p>

<p>
  <strong><%= t "activerecord.attributes.screening.title" %>:</strong>
  <%= @screening.title %>
</p>

<p>
  <strong><%= t "activerecord.attributes.screening.body" %>:</strong>
  <div id="screening-body"><%= @screening.body %></div>
</p>

<p>
  <strong><%= t "activerecord.attributes.screening.showing_start" %>:</strong>
  <%= @screening.showing_start %>
</p>

<%= form_tag join_screening_path(@screening) do %>
  <fieldset>
    <legend>参加する？</legend>
    メッセージ: <input type="text" name="message" placeholder="参加にあたって一言">
    <%= submit_tag "参加する" %>
  </fieldset>
<% end %>

<h3>参加者</h3>
<% @screening.join_screenings.each do |member| %>
  <p><%= link_to member.user.profile.nickname, user_profile_show_path(member.user.profile.username) %>: <%= member.message %></p>
<% end %>

<%= link_to 'Edit', edit_screening_path(@screening) %> |
<%= link_to 'Back', screenings_path %>

<script>
  var body = document.getElementById("screening-body");
  body.innerHTML = marked(body.innerHTML);
</script>
